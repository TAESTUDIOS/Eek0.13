# Database (required for reminders and persistent storage)
DATABASE_URL=postgresql://user:password@host:5432/database
# or use Neon
# NEON_DATABASE_URL=postgresql://user:password@host:5432/database

# Notification Webhook (required for reminders)
NOTIFY_WEBHOOK_URL=https://your-n8n-instance.com/webhook/reminders

# Optional: Webhook Authentication
# Use either Basic Auth OR Bearer token, not both
# NOTIFY_WEBHOOK_BASIC_USER=username
# NOTIFY_WEBHOOK_BASIC_PASS=password
# NOTIFY_WEBHOOK_BEARER=your_bearer_token_here

# Optional: Custom webhook headers (JSON format)
# NOTIFY_WEBHOOK_HEADERS={"X-Custom-Header":"value"}

# Scheduler Configuration
SCHEDULER_TOKEN=your_random_secure_token_here
SCHEDULER_TZ=UTC

# App Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
APP_ORIGIN=http://localhost:3000

# Optional: Fallback webhook for general chat
# FALLBACK_WEBHOOK_URL=https://your-n8n-instance.com/webhook/chat
